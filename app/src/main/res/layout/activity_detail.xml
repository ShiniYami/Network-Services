<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="53dp"
        android:text="Name:" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameHolder"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/nameHolder"
        android:text="TextView" />

    <TextView
        android:id="@+id/locationHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameHolder"
        android:layout_below="@+id/nameHolder"
        android:layout_marginTop="21dp"
        android:text="Location:" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameText"
        android:layout_alignTop="@+id/locationHolder"
        android:text="TextView" />

    <TextView
        android:id="@+id/descriptionHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweet:"
        android:layout_below="@+id/Profile_img"
        android:layout_alignStart="@+id/locationHolder" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/descriptionHolder"
        android:layout_toEndOf="@+id/descriptionHolder"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL:"
        android:id="@+id/textView4"
        android:layout_below="@+id/descriptionText"
        android:layout_alignStart="@+id/descriptionHolder"
        android:layout_marginTop="65dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="urlplaceholder"
        android:id="@+id/textView3"
        android:layout_toEndOf="@+id/locationHolder"
        android:layout_alignTop="@+id/textView4" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="27dp"
        android:id="@+id/Profile_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>